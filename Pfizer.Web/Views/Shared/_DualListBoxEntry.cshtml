<style>
    div.link-list-modules {
        width: 45%;
        height: 15em;
        font-size: 90%;
        margin-right: 1px;
        margin-left: 1px;
        border: 0 solid;
    }

    /* we leave some place on the side using the margin-* properties */
    #divModuleMover {
        margin-left: 45%;
        margin-right: 45%;
        margin-top: 3.4em;
        padding-left: 2%;
        padding-right: 2%;
        border: 0 solid;
    }

    #divDualListBoxContainer {
        width: 520px;
    }
    
    #divUnassignedModules {
        width: 54%;
    }

    #divAssignedModules {
        width: 40%;
    }

    #UnassignedRecords {
        font-family: "Segoe UI", Verdana, Helvetica, Sans-Serif;
        width: 100%;
        height: 150px;
    }

    #AssignedRecords {
        font-family: "Segoe UI", Verdana, Helvetica, Sans-Serif;
        width: 100%;
        height: 150px;
    }

    button.movebutton {
        width: 40px;
    }

    .countLabel {
        color: Gray;
        font-style: italic;
    }

