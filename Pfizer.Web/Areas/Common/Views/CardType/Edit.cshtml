@using Wizardsgroup.Core.Web.Extensions
@model Pfizer.Web.Areas.Common.ViewModels.CardTypeViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.CustomValidationSummary()
    <fieldset>
        <legend></legend>
        @Html.HiddenFor(model => model.CardTypeId)
        @Html.HiddenFor(model => model.ClassId)

        @Html.CustomLabelFor(model => model.ClassName)
        <div class="editor-field">
             @Model.ClassName
        </div>        

        @Html.CustomLabelFor(model => model.Name)
        <div class="editor-field">
            @Html.CustomTextBoxFor(model => model.Name,250)
        </div>

        @Html.CustomLabelFor(model => model.Description)
        <div class="editor-field">
            @Html.CustomTextAreaBoxFor(model => model.Description,1000)
        </div>
    </fieldset>
}
