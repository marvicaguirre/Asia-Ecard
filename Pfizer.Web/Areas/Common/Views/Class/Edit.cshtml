@using Wizardsgroup.Core.Web.Extensions
@model Pfizer.Web.Areas.Common.ViewModels.ClassViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.CustomValidationSummary()
    <fieldset>
        <legend></legend>
        @Html.HiddenFor(model => model.ClassId)


        @Html.CustomLabelFor(model => model.Name)
        <div class="editor-field">
            @Html.CustomTextBoxFor(model => model.Name,100)
        </div>

        @Html.CustomLabelFor(model => model.Description)
        <div class="editor-field">
            @Html.CustomTextAreaBoxFor(model => model.Description,1000)
        </div>
    </fieldset>
}
