@using Wizardsgroup.Core.Web.Extensions
@{
    const string gridName = "UserGrid";
    const string controller = "User";
}
<div id="divMaster">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="panel">
            <div class="panel-heading">
                Users
            </div>
            <div class="panel-body">
                <div class="row row-padding-top-10">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        @Html.CustomGrid(gridName,"GetRecords", controller,null,null)
                    </div>
                </div>
                <div class="row row-padding-top-10">
                    <div class="col-xs-1 col-md-1 col-lg-1">                                                
                        @(Html.Wizardsgroup()
                              .ButtonFor("Add")
                              .Create(button => button.GridName(gridName).Width(100))
                              .Action("Create", controller)
                              .Modal(modal => modal.Title("Create New User").Height(500).Width(404))
                              .Render())
                    </div>

                    <div class="col-xs-1 col-md-1 col-lg-1">                        
                        @(Html.Wizardsgroup()
                              .ButtonFor("Delete")
                              .Delete(button => button.GridName(gridName))
                              .Action(action => action.Controller(controller).Confirm("ConfirmItems").Action("DeleteItems"))
                              .SelectionMode(SelectionMode.Multiple)
                              .Modal(modal => modal.Height(350).Width(500).Title("Delete User(s)"))
                              .Render())
                    </div>

                    <div class="col-xs-1 col-md-1 col-lg-1">
                        @(Html.Wizardsgroup()
                              .ButtonFor("Toggle")
                              .Toggle(button => button.GridName(gridName))
                              .Action(controller)
                              .Modal(modal => modal.Height(350).Width(500).Title("Toggle User(s)"))
                              .Render())
                    </div>
                    <div class="col-xs-10 col-md-10 col-lg-10">
                                
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>