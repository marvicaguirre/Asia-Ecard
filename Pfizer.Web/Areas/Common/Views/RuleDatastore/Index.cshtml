@using Wizardsgroup.Core.Web.Extensions
@{
    const string gridName = "RuleDatastoreGrid";
    const string contoller = "RuleDatastore";
}
<div id="divMaster">
    <div class="col-xs-12 col-md-12 col-lg-12">
        <div class="panel">
            <div class="panel-heading">
              @ViewBag.Title       
            </div>
            <div class="panel-body">
                <div class="row row-padding-top-10">
                    <div class="col-xs-12 col-md-12 col-lg-12">
                        @Html.CustomGrid(gridName, "GetRecords",contoller,null,null)
                    </div>
                </div>
                <div class="row row-padding-top-10">
                    <div class="col-xs-1 col-md-1 col-lg-1">                        
                        @Html.CustomButtonEntry("Add","Create",contoller,"Create New Rule",400,600,100,gridName)
                    </div>
                    <div class="col-xs-1 col-md-1 col-lg-1">
                        @Html.CustomButtonDelete("Delete","ConfirmItems","DeleteItems",contoller,"Delete Rule(s)",null,null,100,gridName)
                    </div>
                    <div class="col-xs-10 col-md-10 col-lg-10">
                                
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>