@model Pfizer.Web.Areas.Common.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    @Html.Partial("_StyleContainer")
    @Html.Partial("_ScriptContainer")

</head>
<body class="body-flat-background">
    <div class="navbar navbar-inverse box-shadow">
        <div class="container">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#"><img class="hidden-sm hidden-xs" src="~/Resources/Images/company_logo.png" /></a>
            <div class="nav-collapse navbar-responsive-collapse in" style="height: auto;">

            </div>
            <!-- /.nav-collapse -->
        </div>
        <!-- /.container -->
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-6 col-md-8 col-lg-8">

            </div>
            <div class="col-xs-4 col-md-6 col-lg-4">
                <div class="panel">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { name = "LoginForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                        <div class="row row-margin-5">
                            <div class="col-xs-12 col-md-12 col-lg-12">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">
                                        <b>User Name<span style="color:red">*</span>:</b>
                                    </span>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "User Name" })
                                </div>
                            </div>
                        </div>
                        <div class="row row-margin-5">
                            <div class="col-xs-12 col-md-12 col-lg-12">
                                <div class="input-group input-group-sm">
                                    <span class="input-group-addon">
                                        <b style="padding-right: 10px;">Password<span style="color:red">*</span>:</b>
                                    </span>
                                    <input type="password" name="Password" class="form-control" placeholder="Password" />
                                </div>
                            </div>
                        </div>
                        <div class="row row-padding-top-10">
                            <div class="col-xs-6 col-md-6 col-lg-6">
                                @*<input type="submit" class="btn btn-primary btn-block" name="CreateAccount" value="Create Account" />*@
                            </div>
                            <div class="col-xs-6 col-md-6 col-lg-6">
                                <input type="submit" class="btn btn-primary btn-block" name="Login" value="Login" tabindex="1" />
                            </div>
                        </div>
                        @*<div class="row row-margin-5 row-padding-top-5">
                            <div class="col-xs-6 col-md-6 col-lg-6">
                                <a title="Create Account" href="#">Create Account</a>
                            </div>
                            <div class="col-xs-6 col-md-6 col-lg-6" style="padding-right: 0;">
                                <a title="Forgot your Password" href="#">Forgot your Password</a>
                            </div>
                        </div>*@
                        
                    }
                </div>
            </div>
        </div>
    </div>

    <div id="divEntry">
    </div>
    <div class="success message"></div>
